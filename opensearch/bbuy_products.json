{
  "settings": {
    "index.refresh_interval": "5s",
    "analysis": {
      "analyzer": {
        "std_english": { 
          "type":      "standard",
          "stopwords": "_english_",
          "filter": [ "lowercase" ]
        }
      
    }
  }
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "@version": {
        "type": "integer"
      },
      "active": {
        "type": "boolean"
      },
      "bestBuyItemId": {
        "type": "integer"
      },
      "bestSellingRank": {
        "type": "integer"
      },
    
      "categoryPath": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      
      "class": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "classId": {
        "type": "integer"
      },
      "customerReviewAverage": {
        "type": "integer"
      },
      "customerReviewCount": {
        "type": "integer"

      },
      "department": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "departmentId": {
        "type": "integer"
      },
      "digital": {
        "type": "boolean"
      
      },
      "homeDelivery": {
        "type": "boolean"
        
      },
      "image": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "inStoreAvailability": {
        "type": "boolean"
      },
      "inStorePickup": {
        "type": "boolean"
        
      },
      "manufacturer": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "analyzer": "std_english",
            "ignore_above": 256
          }
        }
      },
      "shortDescription": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "analyzer": "std_english",
            "ignore_above": 256
          }
        }
      },
      "longDescription": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "analyzer": "std_english",
            "ignore_above": 256
          }
        }
      },
      "onSale": {
        "type": "boolean"
      },
      "onlineAvailability": {
        "type": "boolean"
      },
      "productId": {
        "type": "integer"
       
      },
      "quantityLimit": {
        "type": "integer"
      },
      "regularPrice": {
        "type": "scaled_float",
        "scaling_factor": 100
        
      },
      "releaseDate": {
        "type": "date"
      },
      "salePrice": {
        "type": "scaled_float",
        "scaling_factor": 100
      },
      "salesRankLongTerm": {
        "type": "integer"
      },
      "salesRankMediumTerm": {
        "type": "integer"
      },
      "salesRankShortTerm": {
        "type": "integer"
      },
      "shippingCost": {
        "type": "float"
       
      },
      "sku": {
        "type": "integer"
      },
      "startDate": {
        "type": "date"
      },
      "subclass": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "subclassId": {
        "type": "integer"
      },
     
      "type": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "url": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      }
    }
  }
}